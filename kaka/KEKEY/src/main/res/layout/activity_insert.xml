<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.maple.kaka.insert">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/Main_Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/inst_title_img"
                    android:layout_width="30dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/border_style" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:text="메인 이미지"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Detail_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <EditText
                        android:id="@+id/inst_ven_corname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorRegister"
                        android:gravity="center"
                        android:hint="상호"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/inst_cortel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorRegister"
                        android:gravity="center"
                        android:hint="전화번호"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/inst_ven_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@color/colorRegister"
                        android:gravity="center"
                        android:hint="영업시간"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <EditText
                        android:id="@+id/inst_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="2.15"
                        android:background="@color/colorRegister"
                        android:gravity="center"
                        android:hint="주소"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/inst_use_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.85"
                        android:background="@color/colorRegister"
                        android:gravity="center"
                        android:hint="1달"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textSize="12dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Insert_View01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/inst_img01"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:background="@drawable/border_style" />

                    <EditText
                        android:id="@+id/inst_name01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_style"
                        android:gravity="center"
                        android:hint="이름가격"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/inst_img02"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:background="@drawable/border_style" />

                    <EditText
                        android:id="@+id/inst_name02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_style"
                        android:gravity="center"
                        android:hint="이름가격"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/inst_img03"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:background="@drawable/border_style" />

                    <EditText
                        android:id="@+id/inst_name03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_style"
                        android:gravity="center"
                        android:hint="이름가격"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textSize="12dp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Insert_View02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/inst_img04"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:background="@drawable/border_style" />

                    <EditText
                        android:id="@+id/inst_name04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_style"
                        android:gravity="center"
                        android:hint="이름가격"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/inst_img05"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:background="@drawable/border_style" />

                    <EditText
                        android:id="@+id/inst_name05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_style"
                        android:gravity="center"
                        android:hint="이름가격"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/inst_img06"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:background="@drawable/border_style" />

                    <EditText
                        android:id="@+id/inst_name06"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/border_style"
                        android:gravity="center"
                        android:hint="이름가격"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textSize="12dp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="글 올리기"
                    android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <EditText
                    android:id="@+id/inst_ven_index"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorRegister"
                    android:inputType="textMultiLine"
                    android:textSize="12dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/button_insert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorPrimaryDark"
                    android:text="등록"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>





</RelativeLayout>
