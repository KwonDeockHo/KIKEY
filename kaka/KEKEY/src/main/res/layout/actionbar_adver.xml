<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Switch
        android:id="@+id/bt_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:splitTrack="false"
        android:text="광고"
        tools:checked="false"
        android:layout_alignBottom="@+id/bt_option"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <ImageButton
        android:id="@+id/bt_option"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/edt_img" />

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P. "
        android:layout_alignBaseline="@+id/tv_point_value"
        android:layout_alignBottom="@+id/tv_point_value"
        android:layout_toLeftOf="@+id/tv_point_value"
        android:layout_toStartOf="@+id/tv_point_value" />

    <TextView
        android:id="@+id/tv_point_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bt_switch"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:layout_toLeftOf="@+id/bt_option"
        android:layout_toStartOf="@+id/bt_option"
        android:text="0000" />

</RelativeLayout>
